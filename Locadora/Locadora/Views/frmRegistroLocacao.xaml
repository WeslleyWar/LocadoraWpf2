        <Label x:Name="LbLocacao" Content="LOCAÇÃO" HorizontalAlignment="Left" Margin="282,228,0,0" VerticalAlignment="Top" Width="158" FontSize="18" FontWeight="Bold" FontStyle="Italic" FontFamily="Arial Black"/>
        <Label x:Name="LbQntdDias" Content="Tempo em Dias:" HorizontalAlignment="Left" Margin="282,266,0,0" VerticalAlignment="Top" Width="130" FontSize="15"/>
        <Label x:Name="LbValorPrevisto" Content="Valor previsto:" HorizontalAlignment="Left" Margin="282,301,0,0" VerticalAlignment="Top" Width="130" FontSize="15"/>
        <Label x:Name="LbCpfFuncionario_Copy" Content="Data de Entrega&#xD;&#xA;Prevista:" HorizontalAlignment="Left" Margin="282,393,0,0" VerticalAlignment="Top" Width="130" FontSize="15"/>
        <TextBox x:Name="TxtDiasLocacao" HorizontalAlignment="Left" Height="30" Margin="417,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="TxtValorPrevisto" HorizontalAlignment="Left" Height="30" Margin="417,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
