        <Label x:Name="LbCpfCliente" Content="CPF:" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="88" FontSize="15"/>
        <Label x:Name="LbCnhCliente" Content="CNH:" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="88" FontSize="15"/>
