        <Label x:Name="LbCargoFuncionario_Copy1" Content="Data inicio &#xD;&#xA;Locação:" HorizontalAlignment="Left" Margin="282,338,0,0" VerticalAlignment="Top" Width="130" FontSize="15"/>
        <TextBox x:Name="TxtDataInicio" HorizontalAlignment="Left" Height="46" Margin="417,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>


