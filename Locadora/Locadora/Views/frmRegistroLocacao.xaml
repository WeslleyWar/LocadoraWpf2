        <TextBox x:Name="TxtCnhCliente" HorizontalAlignment="Left" Height="30" Margin="103,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="btnValidarC" Content="VALIDAR" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="243" Height="22" Background="#FFEEE1C6" FontWeight="Bold" FontFamily="Arial" FontSize="11" Click="BtnBuscarC_Click"/>
        <Label x:Name="LbFuncionario" Content="FUNCIONARIO" HorizontalAlignment="Left" Margin="10,228,0,0" VerticalAlignment="Top" Width="158" FontSize="18" FontWeight="Bold" FontStyle="Italic" FontFamily="Arial Black"/>
        <Label x:Name="LbNomeFuncionario" Content="NOME:" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Width="88" FontSize="15"/>
        <Label x:Name="LbCargoFuncionario" Content="CARGO:" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Width="88" FontSize="15"/>
        <Label x:Name="LbCpfFuncionario" Content="CPF:" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top" Width="88" FontSize="15"/>
        <TextBox x:Name="TxtNomeFuncionario" HorizontalAlignment="Left" Height="30" Margin="103,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="TxtCargoFuncionario" HorizontalAlignment="Left" Height="30" Margin="103,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="TxtCpfFuncionario" HorizontalAlignment="Left" Height="30" Margin="103,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="btnValidarF" Content="VALIDAR" HorizontalAlignment="Left" Margin="10,371,0,0" VerticalAlignment="Top" Width="243" Height="22" Background="#FFEEE1C6" FontWeight="Bold" FontFamily="Arial" FontSize="11" Click="BtnBuscarC_Click"/>
        <Label x:Name="LbVeiculo" Content="VEÍCULO" HorizontalAlignment="Left" Margin="282,10,0,0" VerticalAlignment="Top" Width="116" FontSize="18" FontWeight="Bold" FontStyle="Italic" FontFamily="Arial Black"/>
